{% extends 'base-speciale.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
    <div class="mb-5">
        <h2 class="cta-1 mb-0 text-primary">Demander un acc√®s</h2>
    </div>

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {{ form_start(registrationForm) }}
    <div class="mb-3 filled form-group tooltip-end-top form-floating">
        {{ form_widget(registrationForm.civilite) }}
        {{ form_label(registrationForm.civilite) }}
    </div>
    <div class="mb-3 filled form-group tooltip-end-top form-floating">
        {{ form_widget(registrationForm.prenom) }}
        {{ form_label(registrationForm.prenom) }}
    </div>
    <div class="mb-3 filled form-group tooltip-end-top form-floating">
        {{ form_widget(registrationForm.nom) }}
        {{ form_label(registrationForm.nom) }}
    </div>

    <div class="mb-3 filled form-group tooltip-end-top form-floating">
        {{ form_widget(registrationForm.email) }}
        {{ form_label(registrationForm.email) }}
    </div>
    <div class="mb-3 filled form-group tooltip-end-top form-floating">
        {{ form_widget(registrationForm.specialite) }}
        {{ form_label(registrationForm.specialite) }}
    </div>
    <div class="mb-3 filled form-group tooltip-end-top form-floating">
        {{ form_widget(registrationForm.plainPassword) }}
        {{ form_label(registrationForm.plainPassword) }}
    </div>

    <button class="btn btn-lg btn-primary" type="submit">Valider votre demande</button> <a href="{{ path('app_login')
}}"> Se connecter</a>
    {{ form_end(registrationForm) }}
{% endblock %}
