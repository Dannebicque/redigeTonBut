<!DOCTYPE html>
<html lang="fr" data-footer="true">
<head>
    <meta charset="UTF-8">
    <title>{{ block('header')|raw }} - ORéBUT</title>
    <link rel="preconnect" href="https://fonts.gstatic.com"/>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600&display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;700&display=swap" rel="stylesheet"/>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <script src="{{ asset('autoComplete.min.js') }}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<!-- Content Container Start -->
<div id="root">

    <!-- Nav Content Start -->
    <div id="nav" class="nav-container d-flex">
        <div class="nav-content d-flex">
            <!-- Logo Start -->
            <div class="logo position-relative">
                <a href="{{ path('homepage') }}">
                    <div class="logo-but">
                        <i class="bi-pencil"></i>&nbsp;ORéBUT {% if user_data.departement != null %}
                            | <span>{{ user_data.departement.sigle }}</span>
                        {% endif %}</div>
                </a>

            </div>
            <!-- Logo End -->

            <!-- User Menu Start -->
            <div class="user-container d-flex">
                <a href="#" class="d-flex user position-relative" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <div class="name">{{ app.user.display }}</div>
                </a>
                <div class="dropdown-menu dropdown-menu-end user-menu wide">
                    <div class="row mb-3 ms-0 me-0">
                        <div class="col-12 ps-1 mb-2">
                            <div class="text-extra-small text-primary">COMPTE</div>
                        </div>
                        <div class="col-12 ps-1 pe-1">
                            <ul class="list-unstyled">
                                <li>
                                    <a href="{{ path('profil_profil') }}">Mes informations</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="row mb-1 ms-0 me-0">
                        <div class="col-12 p-1 mb-2 pt-2">
                            <div class="text-extra-small text-primary">APPLICATION</div>
                        </div>
                        <div class="col-12 ps-1 pe-1">
                            <ul class="list-unstyled">
                                <li>
                                    <a href="{{ path('profil_theme') }}">Themes</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="row mb-1 ms-0 me-0">
                        <div class="col-12 p-1 mb-2 pt-2">
                            <div class="text-extra-small text-primary">ACCÈS</div>
                        </div>
                        <div class="col-12 ps-1 pe-1">
                            <ul class="list-unstyled">
                                <li>
                                    <a href="{{ path('profil_password') }}">Modification du mot de passe</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_logout') }}">Déconnexion</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- User Menu End -->

            <!-- Icons Menu Start -->
            <ul class="list-unstyled list-inline text-center menu-icons">
                <li class="list-inline-item">
                    <a href="#" data-bs-toggle="modal" data-bs-target="#searchPagesModal">
                        <i class="bi bi-search"></i>
                    </a>
                </li>
                <li class="list-inline-item">
                    <a href="#" id="colorButton">
                        <i class="bi bi-moon light"></i>
                        <i class="bi bi-sun dark"></i>
                    </a>
                </li>
            </ul>
            <!-- Icons Menu End -->

            <!-- Menu Start -->
            <div class="menu-container flex-grow-1">
                <ul id="menu" class="menu">
                    {% if user_data.departement != null %}
                        <li>
                            <a href="#ref_competences" data-href="{{ path('administration_apc_referentiel_index', {departement:1}) }}">
                                <i class="bi bi-wallet2 icon"></i>
                                <span class="label">Ref. Compétences</span>
                            </a>
                            <ul id="ref_competences">
                                <li>
                                    <a href="{{ path('administration_apc_referentiel_index', {departement: user_data
                                    .departement.id}) }}">
                                        <span class="label">Consulter</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('administration_apc_apprentissage_critique_index', {departement:
                                        user_data.departement.id}) }}">
                                        <span class="label">Liste des AC</span>
                                    </a>
                                </li>
                                {% if is_granted('ROLE_GT') or is_granted('ROLE_CPN') or is_granted('ROLE_PACD') or
                                    is_granted('ROLE_EDITEUR') %}
                                    <li>
                                        <a href="{{ path('administration_departement_edit', {id: user_data.departement
                                        .id}) }}">
                                            <span class="label">Texte descriptif de la spécialité</span>
                                        </a>
                                    </li>
                                    {% for parcours in user_data.departement.apcParcours %}
                                        <li>
                                            <a href="{{ path('administration_apc_parcours_edit', {id:parcours.id}) }}">
                                                <span class="label">texte du parcours : {{ parcours.libelle }}</span>
                                            </a>
                                        </li>
                                    {% endfor %}
                                {% else %}
                                    <li>
                                        <a href="{{ path('administration_departement_lecteur_show', {id: user_data.departement.id}) }}">
                                            <span class="label">Consulter le Texte descriptif de la spécialité</span>
                                        </a>
                                    </li>
                                    {% for parcours in user_data.departement.apcParcours %}
                                        <li>
                                            <a href="{{ path('administration_apc_parcours_show', {id:parcours.id}) }}">
                                                <span class="label">Consulter le  texte du parcours : {{ parcours
                                                    .libelle }}</span>
                                            </a>
                                        </li>
                                    {% endfor %}
                                {% endif %}
                            </ul>
                        </li>
                        <li>
                            <a href="#tableaux" data-href="Dashboards.html">
                                <i class="bi bi-table icon"></i>
                                <span class="label">Tableaux</span>
                            </a>
                            <ul id="tableaux">
                                <li>
                                    <a href="{{ path('tableau_structure') }}">
                                        <span class="label">Structure des 3 années</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        {% for annee in user_data.annees %}
                            <li>
                                <a href="#but{{ annee.ordre }}" data-href="{{ path('but_annee', {annee: annee.id}) }}">
                                    <i class="bi bi-calendar3 icon"></i>
                                    <span class="label">BUT{{ annee.ordre }}</span>
                                </a>
                                <ul id="but{{ annee.ordre }}">
                                    {% if user_data.departement.typeStructure != 'type3' %}
                                    <li>
                                        <a href="{{ path('but_ressources_annee', {annee: annee.id}) }}">
                                            <span class="label">Ressources</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="{{ path('but_sae_annee', {annee: annee.id}) }}">
                                            <span class="label">SAÉ</span>
                                        </a>
                                    </li>
                                    {% endif %}

                                    {% if user_data.departement.typeStructure == 'type3' or annee.ordre >= 2 %}
                                        {% for parcours in user_data.departement.apcParcours %}
                                            <li>
                                                <a href="#parcours{{ parcours.id }}">
                                                    <span class="label">{{ parcours.libelle }}</span>
                                                </a>
                                                <ul id="parcours{{ parcours.id }}">
                                                    <li>
                                                        <a href="{{ path('but_ressources_annee', {annee: annee.id, parcours: parcours.id}) }}">
                                                            <span class="label">Ressources du parcours</span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="{{ path('but_sae_annee', {annee: annee.id, parcours: parcours.id}) }}">
                                                            <span class="label">SAÉ du parcours</span>
                                                        </a>
                                                    </li>

                                                    <li>
                                                        <a href="{{ path('tableau_croise_annee', {annee: annee.id, parcours: parcours.id}) }}">
                                                            <span class="label">Tableau croisé par semestre</span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="{{ path('tableau_horaire_annee', {annee: annee.id,
                                                            parcours: parcours.id}) }}">
                                                            <span class="label">Volumes horaires par semestre</span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="{{ path('tableau_preconisations_annee', {annee: annee.id, parcours: parcours.id}) }}">
                                                            <span class="label">
                                                                Préconisations par semestre
                                                            </span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="{{ path('tableau_validation_sae_ac_annee', {annee: annee.id,
                                                            parcours: parcours.id}) }}">
                                                            <span class="label">Validation des AC par les SAÉ</span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </li>
                                        {% endfor %}
                                    {% else %}
                                        <li>
                                            <a href="{{ path('tableau_croise_annee', {annee: annee.id}) }}">
                                                <span class="label">Tableau croisé par semestre</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('tableau_horaire_annee', {annee: annee.id}) }}">
                                                <span class="label">Volumes horaires par semestre</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('tableau_preconisations_annee', {annee: annee.id}) }}">
                                                <span class="label">Préconisations par semestre</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('tableau_validation_sae_ac_annee', {annee: annee.id}) }}">
                                                <span class="label">Validation des AC par les SAÉ</span>
                                            </a>
                                        </li>
                                    {% endif %}
                                </ul>
                            </li>
                        {% endfor %}
                    {% endif %}
                    <li>
                        <a href="#admin" data-href="Dashboards.html">
                            <i class="bi bi-gear icon"></i>
                            <span class="label">Admin.</span>
                        </a>
                        <ul id="admin">
                            {% if is_granted('ROLE_GT') %}
                                <li>
                                    <a href="{{ path('administration_apc_referentiel_import') }}">
                                        <span class="label">Importer des référentiels</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('administration_apc_referentiel_export') }}">
                                        <span class="label">Exporter</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('administration_departement_index') }}">
                                        <span class="label">Gestion des spécialités</span>
                                    </a>
                                </li>
                            {% endif %}
                            <li>
                                <a href="{{ path('administration_utilisateur_index') }}">
                                    <span class="label">Gérer les accès</span>
                                </a>
                            </li>

                            <li>
                                <a href="{{ path('update_codification_index') }}">
                                    <span class="label">MàJ codification</span>
                                </a>
                            </li>
{#                            {% if not is_granted('ROLE_GT') %}#}
                                <li>
                                    <a href="{{ path('administration_apc_referentiel_competence_export') }}">
                                        <span class="label">Sauvegarder le référentiel de compétences</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('administration_apc_referentiel_formation_export') }}">
                                        <span class="label">Sauvegarder le référentiel de formation</span>
                                    </a>
                                </li>
                                {# todo: possibilité d'export d'autres format ? mais pas en sauvegarde #}
{#                            {% endif %}#}
                            <li>
                                <a href="{{ path('administration_apc_referentiel_import_formation_index') }}">
                                    <span class="label">Importer le référentiel de formation</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    {% if is_granted('ROLE_GT') %}
                        <li class="mega dropdown">
                            <a href="#ref_formation" data-href="Dashboards.html">
                                <i class="bi bi-shuffle icon"></i>
                                <span class="label">B.U.T.</span>
                            </a>
                            <ul id="interface" class="row align-items-start row-cols-2 dropdown-menu"
                                data-popper-placement="bottom-start">
                                <li class="dropdown col d-flex flex-column">
                                    <a href="#tertiaires" data-href="Interface.Components.html" class="dropdown-toggle
                                    active">
                                        <span class="label">Tertiaires</span>
                                    </a>
                                    <ul id="tertiaires">
                                        {% for specialite in user_data.specialites|filter(specialite => specialite
                                        .typeDepartement == 'tertiaire') %}
                                            <li class="col d-flex flex-column">
                                                <a href="{{ path('change_specialite', {departement:specialite.id}) }}">
                                                    <span class="label">{{ specialite.sigle }}</span>
                                                </a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </li>
                                <li class="dropdown col d-flex flex-column">
                                    <a href="#Secondaires" class="dropdown-toggle">
                                        <span class="label">Secondaires</span>
                                    </a>
                                    <ul id="Secondaires">
                                        {% for specialite in user_data.specialites|filter(specialite => specialite
                                        .typeDepartement == 'secondaire') %}
                                            <li class="col d-flex flex-column">
                                                <a href="{{ path('change_specialite', {departement:specialite.id}) }}">
                                                    <span class="label">{{ specialite.sigle }}</span>
                                                </a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </li>
                            </ul>
                        </li>
                    {% endif %}
                </ul>
            </div>
            <!-- Menu End -->

            <!-- Mobile Buttons Start -->
            <div class="mobile-buttons-container">
                <!-- Scrollspy Mobile Button Start -->
                <a href="#" id="scrollSpyButton" class="spy-button" data-bs-toggle="dropdown">
                    <i class="bi bi-chevron-right"></i>
                </a>
                <!-- Scrollspy Mobile Button End -->

                <!-- Scrollspy Mobile Dropdown Start -->
                <div class="dropdown-menu dropdown-menu-end" id="scrollSpyDropdown"></div>
                <!-- Scrollspy Mobile Dropdown End -->

                <!-- Menu Button Start -->
                <a href="#" id="mobileMenuButton" class="menu-button">
                    <i class="bi bi-justify"></i>
                </a>
                <!-- Menu Button End -->
            </div>
            <!-- Mobile Buttons End -->
        </div>
        <div class="nav-shadow"></div>
    </div>
    <!-- Nav Content End -->

    <!-- Main Content Start -->
    <main>
        <!-- messages flash -->
        {# read and display all flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="toast position-fixed align-items-center top-0 end-0 m-3 bg-{{ label }} border-0" style="z-index:
                2000">
                    <div class="d-flex">
                        <div class="toast-body">
                            <p class="text-white"> {{ message }}</p>
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- fin messages flash -->
        <div class="container">
            <!-- Title and Top Buttons Start -->
            <div class="page-title-container">
                <div class="row">
                    <!-- Title Start -->
                    <div class="col-12 col-sm-6">
                        <h1 class="mb-0 pb-0 display-4" id="title">{% block header %}{% endblock %}</h1>
                        <nav class="breadcrumb-container d-inline-block" aria-label="breadcrumb">
                            {% block breadcrumb %}

                            {% endblock %}

                        </nav>
                    </div>
                    <!-- Title End -->

                    <!-- Top Buttons Start -->
                    <div class="col-12 col-sm-6 d-flex align-items-start justify-content-end">
                        <!-- Tour Button Start -->
                        {% block bouton_header %}
                            {# <button type="button" class="btn btn-outline-primary btn-icon btn-icon-end w-100 w-sm-auto" id="dashboardTourButton"> #}
                            {# <span>Take a Tour</span> #}
                            {# <i data-cs-icon="flag"></i> #}
                            {# </button> #}
                        {% endblock %}
                        <!-- Tour Button End -->
                    </div>
                    <!-- Top Buttons End -->
                </div>
            </div>
            <!-- Title and Top Buttons End -->
            {% block content %}

            {% endblock %}
        </div>
    </main>
    <!-- Main Content End -->

    <!-- Footer Content Start -->
    <footer>
        <div class="footer-content">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-sm-6">

                        <ul class="breadcrumb pt-0 pe-0 mb-0">
                            <li class="breadcrumb-item mb-0 text-medium">
                                <p class="mb-0 text-muted text-medium">&copy; 2021 David Annebicque -
                                                                       version {{ user_data.version }}</p>
                            </li>
                            <li class="breadcrumb-item mb-0 text-medium">
                                <a href="#" class="btn-link">Docs</a>
                            </li>
                            <li class="breadcrumb-item mb-0 text-medium">
                                <a href="#" class="btn-link" data-bs-toggle="modal"
                                   data-bs-target="#modalUsageDonnees">Usage des données</a>
                            </li>
                        </ul>
                    </div>

                    <!-- Modal -->
                    <div
                            class="modal fade modal-close-out"
                            id="modalUsageDonnees"
                            tabindex="-1"
                            role="dialog"
                            aria-labelledby="examplemodalUsageDonnees"
                            aria-hidden="true"
                    >
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="examplemodalUsageDonnees">Usage des données</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p>Ce site n'enregistre aucune données sur votre utilisation de l'outil.</p>
                                    <p>Un seul cookie est utilisé permettant de gérer la connexion (lorsque vous activez
                                       l'option "se souvenir de moi" sur la page de connexion.</p>
                                    <p>Les fichiers de log (en cas d'erreur ou de problème) sont complètement
                                       anonymes et sans information personnelles vous concernant.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div
                            class="modal fade modal-close-out"
                            id="modalMarkdown"
                            tabindex="-1"
                            role="dialog"
                            aria-labelledby="examplemodalMarkdown"
                            aria-hidden="true"
                    >
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="examplemodalMarkdown">Syntaxe Markdwon</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p>Les listes</p>
                                    Les listes à puces (* ou -)
                                    <div class="row">
                                        <div class="col-6">
                                            <p>Syntaxe à utiliser</p>
                                            * item 1<br>
                                            * item 2<br>
                                            <br>
                                            - item 1<br>
                                            - item 2<br>
                                        </div>
                                        <div class="col-6">
                                            <p>Résultat</p>
                                            <ul>
                                                <li>Item 1</li>
                                                <li>Item 2</li>
                                            </ul>

                                            <ul style="list-style:none">
                                                <li>- Item 1</li>
                                                <li>- Item 2</li>
                                            </ul>
                                        </div>
                                    </div>
                                    Les listes imbriquées puces (* ou -)
                                    <div class="row">
                                        <div class="col-6">
                                            <p>Syntaxe à utiliser</p>
                                            * item 1<br>
                                            &nbsp;* item 1a<br>
                                            &nbsp;* item 1b<br>
                                            * item 2<br>
                                            <br>
                                            (décaler par un espace les items pour faire une sous liste)
                                        </div>
                                        <div class="col-6">
                                            <p>Résultat</p>
                                            <ul>
                                                <li>Item 1</li>
                                                <li style="list-style: none ;"> <ul>
                                                        <li>Item 1a</li>
                                                        <li>Item 1b</li>
                                                    </ul></li>
                                                <li>Item 2</li>
                                            </ul>
                                        </div>
                                    </div>


                                    <p>Gras/Italique</p>
                                    <div class="row">
                                        <div class="col-6">
                                            <p>Syntaxe à utiliser</p>
                                            **Texte en gras**
                                        </div>
                                        <div class="col-6">
                                            <p>Résultat</p>
                                            <strong>Texte en gras</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6 d-none d-sm-block">
                        <ul class="breadcrumb pt-0 pe-0 mb-0 float-end">
                            <li class="breadcrumb-item mb-0 text-medium">
                                <a href="mailto:david.annebicque@univ-reims.fr" target="_blank" class="btn-link"><i
                                            class="text-primary icon-14
                                    bi-envelope"></i></a>
                            </li>
                            <li class="breadcrumb-item mb-0 text-medium">
                                <a href="https://github.com/Dannebicque/redigeTonBut" target="_blank"
                                   class="btn-link"><i class="text-primary icon-14
                                    bi-github"></i></a>
                            </li>
                            <li class="breadcrumb-item mb-0 text-medium">
                                <a href="https://twitter.com/davidannebicque" target="_blank" class="btn-link">
                                    <i class="text-primary icon-14  bi-twitter"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Content End -->

</div>
<!-- Content Container End -->
<!-- Search Modal Start -->
<div class="modal fade modal-under-nav modal-search modal-close-out" id="searchPagesModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header border-0 p-0">
                <button type="button" class="btn-close btn btn-icon btn-icon-only btn-foreground" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body ps-5 pe-5 pb-0 border-0">
                <input id="searchPagesInput" class="form-control form-control-xl borderless ps-0 pe-0 mb-1
                auto-complete" type="text" autocomplete="off" placeholder="Rechercher"/>
            </div>
            <div class="modal-footer border-top justify-content-start ps-5 pe-5 pb-3 pt-3 border-0">
            <span class="text-alternate d-inline-block m-0 me-3">
              <i class="bi bi-arrow-down text-alternate align-middle
              me-1"></i>
              <span class="align-middle text-medium">Naviguer</span>
            </span>
                <span class="text-alternate d-inline-block m-0 me-3">
              <i class="bi bi-bi-arrow-90deg-left text-alternate
              align-middle me-1"></i>
              <span class="align-middle text-medium">Choisir</span>
            </span>
            </div>
        </div>
    </div>
</div>
<!-- Search Modal End -->
</body>
</html>
