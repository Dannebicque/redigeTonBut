{% extends 'base.html.twig' %}

{% block title %}Gestion des critères{% endblock %}
{% block header %}Gestion des critères{% endblock %}

{% block content %}

    <table class="table">
        <thead>
        <tr>
            <th>Libellé</th>
            <th>Description</th>
            <th>Réponses</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for qapes_criteres_evaluation in qapes_criteres_evaluations %}
            <tr>
                <td>
                    <a href="{{ path('app_qapes_criteres_evaluation_show', {'id': qapes_criteres_evaluation.id}) }}">
                        {{ qapes_criteres_evaluation.libelle }}

                    </a><br>
                    <i>{{ qapes_criteres_evaluation.libelleAffichage }}</i>
                </td>
                <td>{{ qapes_criteres_evaluation.description }}</td>
                <td>
                    <ul class="list-unstyled">
                        {% for rep in qapes_criteres_evaluation.qapesCritereReponses %}
                            <li>
                                <span class="badge" style="background: {{ rep.couleur }}">&nbsp;</span>
                                {{ rep.libelle }}
                            </li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    <a href="{{ path('app_qapes_criteres_evaluation_edit', {'id': qapes_criteres_evaluation.id}) }}"
                       class="btn btn-sm btn-outline-warning btn-icon btn-icon-end w-100 w-sm-auto mx-2">
                        <i class="bi-pencil"></i>
                        <span>Modifier</span>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block bouton_header %}
    <a href="{{ path('app_qapes_criteres_evaluation_new') }}"
       class="btn btn-sm btn-outline-success
        btn-icon btn-icon-end w-100 w-sm-auto mx-2"
    >
        <i class="bi-plus-circle"></i>
        <span>Ajouter un nouveau critère</span>
    </a>
{% endblock %}

{% block breadcrumb %}
    {{ include('composants/breadcrumb.html.twig', {liens:[
        {
            href: '',
            title: 'B.U.T. ',
        },
        {
            href: path('app_qapes_criteres_evaluation_index'),
            title: 'Gestion des critères',
        }
    ]}) }}
{% endblock %}