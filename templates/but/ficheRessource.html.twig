       id="dashboardTourButton">
        <i class="bi-pencil-square"></i>
        <span>Modifier</span>
    </a>
    <a href="{{ path('formation_apc_ressource_edit', {id:apc_ressource.id}) }}" class="btn btn-outline-danger
    btn-icon btn-icon-end
    w-100 w-sm-auto"
       id="dashboardTourButton">
        <i class="bi-trash"></i>
        <span>Supprimer</span>
    </a>
