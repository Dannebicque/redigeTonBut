{% extends 'base.html.twig' %}

{% block content %}
    Mise à jour de la codification
    <div class="card">
        <div class="card-body">
            <p>
                Mettre à jour la codification des apprentissages critiques :
                <a href="{{ path('update_codification_acs') }}" class="btn btn-warning">Mettre à jour</a>
            </p>
            <table class="table">
                <thead>
                <tr>
                    <th>Semestre</th>
                    <th>Ressources</th>
                    <th>SAÉ</th>
                </tr>
                </thead>
                <tbody>
                {% for semestre in semestres %}
                    <tr>
                        <td>{{ semestre.libelle }} {% if semestre.apcParcours != null %}<span class="badge
                        badge-parcours-{{semestre.apcParcours.couleur }}">
                                {{ semestre.apcParcours.libelle }}
                            </span>{% endif %}</td>
                        <td>
                            {% if semestre.apcParcours != null %}
                            <a href="{{ path('update_codification_ressources', {semestre:semestre.id, parcours:semestre.apcParcours.id }) }}"
                               class="btn
                    btn-warning">
                                {% else %}
                                <a href="{{ path('update_codification_ressources', {semestre:semestre.id}) }}" class="btn
                    btn-warning">
                                    {% endif %}
                                Mettre à jour
                            </a>
                        </td>
                        <td>
                            {% if semestre.apcParcours != null %}
                            <a href="{{ path('update_codification_sae', {semestre:semestre.id, parcours:semestre.apcParcours.id }) }}"
                               class="btn
                    btn-warning">
                                {% else %}
                                <a href="{{ path('update_codification_sae', {semestre:semestre.id}) }}" class="btn btn-warning">
                                    {% endif %}
                                Mettre à jour
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block header %}
    Mise à jour de la codification
{% endblock %}

