{% extends 'base.html.twig' %}

{% block header %}Détail du parcours : {{ apcParcours.libelle }}{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>Libelle</th>
                    <td>{{ apcParcours.libelle }}</td>
                </tr>

                <tr>
                    <th>Code</th>
                    <td>{{ apcParcours.code }}</td>
                </tr>
                <tr>
                    <th>Ordre</th>
                    <td>{{ apcParcours.ordre }} (si 0, l'ordre alphabétique s'applique)</td>
                </tr>

                <tr>
                    <th>Texte descriptif</th>
                    <td>{{ apcParcours.textePresentation|markdown_to_html|raw }}</td>
                </tr>

                </tbody>
            </table>
        </div>
    </div>
{% endblock %}




