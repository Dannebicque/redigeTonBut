{% extends 'base.html.twig' %}

{% block header %}
    {{ 'adm.apc_parcours_niveau.heading'|trans({'%parcours%': parcours.libelle}) }}
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'adm.apc_parcours_niveau.heading'|trans({'%parcours%': parcours.libelle}) }}</h4>
        <div class="card-body">
            <table class="table">
                <thead>
                <tr>
                    <th>Comp√©tence</th>
                    <th>niveau 1</th>
                    <th>niveau 2</th>
                    <th>niveau 3</th>
                </tr>
                </thead>
                <tbody>
                {% for competence in comptences %}
                    <tr>
                        <td>
                            <span class="badge badge-lg badge-{{ competence.couleur }}">
                                {{ competence.nomCourt }}
                            </span>
                        </td>
                        {% for i in 1..3 %}
                            <td>
                                {% for niveau in competence.apcNiveaux|filter(niveau => niveau.ordre == i) %}
                                    <label>
                                        <input type="checkbox"
                                               name="niveaux[]"
                                               value="{{ niveau.id }}"
                                               class="checkNiveau"
                                               {% if tabNiveauxId[niveau.id] is defined %}checked="checked"{% endif %}
                                               data-parcours="{{ parcours.id }}">
                                        {{ niveau.libelle }}
                                    </label>
                                {% endfor %}
                            </td>
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

