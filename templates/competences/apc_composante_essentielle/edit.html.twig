{% extends 'base.html.twig' %}

{% block header %}
    Modification de la composante essentielle : {{ apc_composante_essentielle.libelle }}
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            {% form_theme form 'form/my-form.html.twig' %}
            {{ form_rest(form) }}
            <button class="btn btn-success">Sauvegarder</button>
            <button class="btn btn-success" value="redirect_to_index" name="btn_update">
                Sauvegarder et revenir au référentiel de compétences
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block breadcrumb %}
    {{ include('composants/breadcrumb.html.twig', {liens:[
        {
            href: path('administration_apc_referentiel_index', {departement:apc_composante_essentielle.departement.id}),
            title: 'Référentiel de compétences',
        },
    ]}) }}
{% endblock %}

{% block bouton_header %}
    {% if is_granted('ROLE_PACD') and user_data.departement.verouilleCompetences == false %}
        {{ include('form/_delete_form.html.twig', {path: path('administration_apc_composante_essentielle_delete',
            {id: apc_composante_essentielle.id, }), id: apc_composante_essentielle.id}) }}
    {% endif %}
    <a href="{{ path('administration_apc_referentiel_index', {departement:apc_composante_essentielle.departement.id}) }}"
       class="btn btn-sm btn-outline-info
        btn-icon btn-icon-end w-100 w-sm-auto mx-2"
    >
        <i class="bi-arrow-left-circle"></i>
        <span>Retour</span>
    </a>
{% endblock %}


