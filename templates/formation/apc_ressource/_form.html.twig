<div class="row">
    <div class="col-sm-2">
        {{ form_row(form.codeMatiere) }}
    </div>
    <div class="col-sm-2">
        {{ form_row(form.ordre) }}
    </div>
    <div class="col-sm-5">
        {{ form_row(form.libelle) }}
    </div>
    <div class="col-sm-3">
        {{ form_row(form.libelleCourt) }}
    </div>

    <div class="col-sm-6">
        {{ form_row(form.heuresTotales) }}
    </div>
    <div class="col-sm-6">
        {{ form_row(form.tpPpn) }}
    </div>

    <div class="alert alert-light">
        <div class="row">
            <div class="col-sm-6">
                {{ form_row(form.cmPpn) }}
            </div>
            <div class="col-sm-6">
                {{ form_row(form.tdPpn) }}
            </div>
        </div>
        {# <div class="alert alert-danger" x-if="cmPpn + tdPpn != heuresTotales - tpPpn"> #}
        {# Erreur dans la répartition de préconisation CM/TD #}
        {# </div> #}
    </div>

    <div class="col-sm-12">
        {{ form_row(form.description) }}
    </div>

    <div class="col-sm-12">
        {{ form_row(form.motsCles) }}
    </div>
    <div class="col-sm-12">
        {{ form_row(form.semestre) }}
        {# todo: les compétences dépendent du semestre...#}
        {{ form_row(form.competences) }}
        <fieldset class="form-group">
            <legend class="col-form-label required">
                Apprentissage(s) critique(s) couvert(s)
            </legend>
            <div id="acRessources">
                <div class="alert alert-warning">
                    Indiquer un semestre et au moins une compétence</div>
                <template x-for="competence in competences">
                    <div>
                        <br>
                        <h4 x-text="competence.libelle"></h4>
                        <div class="row">
                            <template x-for="ac in getAcs(competence.id)">
                                <div class="col-6">
                                    <input type="checkbox" name="ac[]" :value="ac.id" :checked="ac.checked" >&nbsp;
                                    <span x-text="ac.code + ` | ` + ac.libelle"></span>
                                </div>
                            </template>
                        </div>
                    </div>
                </template>
            </div>
            <small id="apc_sae_competences_help" class="form-text text-muted">Ajoutez les compétences couvertes par
                                                                              la ressources.</small>
        </fieldset>

        <fieldset class="form-group">
            <legend class="col-form-label required">
                Prérequis (ressource du semestre ou des semestres précédents)
            </legend>
            <div id="preRequisRessources">
                <div class="alert alert-warning">Indiquer un semestre</div>
                <div class="row">
                    <template x-for="prerequi in prerequis">
                        <div class="col-6">
                            <input type="checkbox" name="tprerequis[]" :value="prerequi.id" :checked="prerequi
                            .checked">&nbsp;
                            <span x-text="prerequi.code + ` | ` + prerequi.libelle"></span>
                        </div>
                    </template>
                </div>
            </div>
            <small id="apc_sae_ressource_help" class="form-text text-muted">Ajoutez les éventuelles ressources
                                                                            pré-requises pour
                                                                            .</small>
        </fieldset>

        <fieldset class="form-group">
            <legend class="col-form-label required">
                SAÉ concernée(s)
            </legend>
            <div id="saeRessource">
                <div class="alert alert-warning">Indiquer un semestre</div>
                <div class="row">
                    <template x-for="sae in saes">
                        <div class="col-6">
                            <input type="checkbox" name="saes[]" :value="sae.id" :checked="sae.checked">&nbsp;
                            <span x-text="sae.code + ` | ` + sae.libelle"></span>
                        </div>
                    </template>
                </div>
            </div>
            <small id="apc_sae_ressource_help" class="form-text text-muted">Ajoutez les SAÉ concernées par la ressource
                                                                            .</small>
        </fieldset>

        <fieldset class="form-group mb-5">
            <legend class="col-form-label required">
                Parcours de la spécialité
            </legend>
            <div id="ressourcesSae">
                <div class="alert alert-warning">Indiquer un semestre.</div>
                <div class="row">
                    <template x-for="parcour in parcours">
                        <div class="col-6">
                            <input type="checkbox" name="parcours[]" :value="parcour.id" :checked="parcour.checked">&nbsp;
                            <span x-text="parcour.code + ` | ` + parcour.libelle"></span>
                        </div>
                    </template>
                </div>
            </div>
            <small id="apc_sae_ressource_help" class="form-text text-muted">
                Si le semestre est composé de Parcours, il sera possible d'y associer une ressource commune (contenu
                strictement identique) à plusieurs parcours. Si le contenu diffère, même légèrement, il est
                préférable de dupliquer la SAÉ pour l'éditer librement selon le parcours.
            </small>
        </fieldset>
    </div>
</div>

