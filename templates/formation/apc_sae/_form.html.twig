        <div class="card-body">
            <div class="row">
                <div class="col-sm-2">
                    {{ form_row(form.codeMatiere) }}
                </div>
                <div class="col-sm-2">
                    {{ form_row(form.ordre) }}
                </div>
                <div class="col-sm-5">
                    {{ form_row(form.libelle) }}
                </div>
                <div class="col-sm-3">
                    {{ form_row(form.libelleCourt) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.portfolio) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.stage) }}
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <h2 class="small-title">Préconisation de répartition (non publié)</h2>
    <div class="card mb-5 bg-secondary text-white">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-4">
                    {{ form_row(form.heuresTotales) }}
                </div>
                <div class="col-sm-4">
                    {{ form_row(form.tpPpn) }}
                </div>
                <div class="col-sm-4">
                    {{ form_row(form.projetPpn) }}
                </div>
            </div>
