{% extends 'base.html.twig' %}

{% block header %}
    Modification de la SAÉ {{ apc_sae.display }}
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body" x-data="getUpdateSae()">
            {{ form_start(form) }}
            {% form_theme form 'form/my-form.html.twig' %}
            {{ include('formation/apc_sae/_form.html.twig') }}

            <button class="btn btn-success">Sauvegarder</button>
            <button class="btn btn-success" value="redirect_to_index" name="btn_update">
                Sauvegarder et revenir  aux SAÉ
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block breadcrumb %}
    {{ include('composants/breadcrumb.html.twig', {liens:[
        {
            href:'',
            title: 'B.U.T. ' ~apc_sae.semestre.annee.ordre,
        },
        {
            href: path('but_sae_annee', {annee: apc_sae.semestre.annee.id, semestre: apc_sae
        .semestre.id}),
            title: 'Les SAÉ',
        },
    ]}) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
      const sae = {{ apc_sae.id }}
    </script>
{% endblock %}
